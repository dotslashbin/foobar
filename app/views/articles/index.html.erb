<p style="color: green"><%= notice %></p>

<% content_for :title, "Articles" %>

<h1>Articles</h1>

<div>
  <%= render 'foobar' %>
</div>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to "#{article.title}", article %></td>
      <td><%= article.description %></td>
      <td>
      <%= button_to "Del article", article_path(article), method: :delete, data: { turbo_confirm:"Are you sure you want to?"}, class: 'btn btn-danger' %>
      <%= link_to "Edit", edit_article_path(article) %>
      </td>
    </tr>

  <% end %>
  </tbody>
</table>

<hr>
<h1>Scaffolded version ...</h1>

<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
    <p>
      <%= link_to "Show this article", article %>
    </p>
  <% end %>
</div>

<%= link_to "New article", new_article_path %>
