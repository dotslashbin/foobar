<% content_for :title, "New article" %>

<h1>New article</h1>

<!-- This is not the default way -->
<!-- "local: true" submits the form as normal HTTP request. The default is to submit it via AJAX (see documentation on this) -->
<%= form_with(model: @article, local: true, data: { turbo: false }) do |f| %>
  <div>Version 2</div>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <p>
    <%= f.submit %>
  </p>
<% end %>


